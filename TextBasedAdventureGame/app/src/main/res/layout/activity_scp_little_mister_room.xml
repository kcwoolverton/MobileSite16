<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScpLittleMisterRoom">

    <RadioGroup
        android:id="@+id/scp_little_mister_option_group"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="213dp">

        <RadioButton
            android:id="@+id/examine_little_mister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Look at the robot" />

        <RadioButton
            android:id="@+id/talk_to_little_mister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Talk to the robot" />

        <RadioButton
            android:id="@+id/abandon_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Refuse the robot's request and abandon it in its cell" />

        <RadioButton
            android:id="@+id/promise_to_help_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assure the robot that you are going to help it" />

        <RadioButton
            android:id="@+id/forcably_take_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tell the robot you are going to take it to the COTBG" />

        <RadioButton
            android:id="@+id/attack_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subdue the robot using force so you can take it with you" />

        <RadioButton
            android:id="@+id/take_robot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Take the robot with you" />

        <RadioButton
            android:id="@+id/return_to_scp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to the SCP containment floor" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="347dp"
        android:layout_height="202dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="500dp"
        android:text="Description of obsidian knife room"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/scp_little_mister_next_button"
        android:onClick="onNextScpLittleMisterButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="149dp"
        android:text="Next" />

    <TextView
        android:id="@+id/additional_scp_little_mister_text"
        android:layout_width="349dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="390dp" />

</RelativeLayout>