<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CellWall">

    <RadioGroup
        android:id="@+id/intro_cell_wall_option_group"
        android:layout_width="348dp"
        android:layout_height="144dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="91dp">

        <RadioButton
            android:id="@+id/examine_crack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Examine the wall." />

        <RadioButton
            android:id="@+id/punch_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punch the wall." />

        <RadioButton
            android:id="@+id/leave_through_broken_wall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave through the broken wall." />

        <RadioButton
            android:id="@+id/smash_wall_with_pipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Smash the crack in the wall with the sink pipe." />

        <RadioButton
            android:id="@+id/return_to_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_to_cell" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="349dp"
        android:layout_height="307dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="395dp"
        android:text="@string/cell_wall_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/intro_cell_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginRight="158dp"
        android:layout_marginBottom="26dp"
        android:onClick="onNextCellButtonClick"
        android:text="Next" />

    <TextView
        android:id="@+id/additional_cell_wall_text"
        android:layout_width="350dp"
        android:layout_height="119dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="254dp" />

</RelativeLayout>