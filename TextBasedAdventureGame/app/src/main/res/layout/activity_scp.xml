<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scp">

    <RadioGroup
        android:id="@+id/scp_option_group"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="213dp">

        <RadioButton
            android:id="@+id/try_to_open_room1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-019" />

        <RadioButton
            android:id="@+id/open_biography_pen_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-067" />

        <RadioButton
            android:id="@+id/open_bunny_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-1793" />

        <RadioButton
            android:id="@+id/open_cassie_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-085" />

        <RadioButton
            android:id="@+id/open_dream_journal_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-1230" />

        <RadioButton
            android:id="@+id/try_to_open_room6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-1439" />

        <RadioButton
            android:id="@+id/open_little_mister_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-629" />

        <RadioButton
            android:id="@+id/open_nostalgic_tissue_box_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-091" />

        <RadioButton
            android:id="@+id/open_obsidian_knife_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-034" />

        <RadioButton
            android:id="@+id/open_office_supplies_man_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the room labelled SCP-086" />

        <RadioButton
            android:id="@+id/return_to_scp_stairwell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to the stairs" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="347dp"
        android:layout_height="202dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="500dp"
        android:text="Description of scp containment floor"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/scp_next_button"
        android:onClick="onNextScpButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="149dp"
        android:text="Next" />

    <TextView
        android:id="@+id/additional_scp_text"
        android:layout_width="349dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="390dp" />

</RelativeLayout>