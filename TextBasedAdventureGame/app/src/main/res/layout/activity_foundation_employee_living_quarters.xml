<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoundationEmployeeLivingQuarters">

    <RadioGroup
        android:id="@+id/foundation_employees_option_group"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="213dp">

        <RadioButton
            android:id="@+id/go_to_armory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the Foundation armory," />

        <RadioButton
            android:id="@+id/dr_1_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the first open room." />

        <RadioButton
            android:id="@+id/dr_2_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the second open room." />

        <RadioButton
            android:id="@+id/dr_3_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the third open room." />

        <RadioButton
            android:id="@+id/sec_guard_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the fourth open room." />

        <RadioButton
            android:id="@+id/go_to_scp_lounge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to the Foundation Employee's lounge." />

        <RadioButton
            android:id="@+id/return_to_employee_stairwell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go back to the stairs." />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="347dp"
        android:layout_height="202dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="31dp"
        android:layout_marginRight="31dp"
        android:layout_marginBottom="500dp"
        android:text="@string/foundation_employee_living_quarters_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/foundation_employees_next_button"
        android:onClick="onNextFoundationEmployeesButtonClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="154dp"
        android:layout_marginRight="154dp"
        android:layout_marginBottom="149dp"
        android:text="Next" />

    <TextView
        android:id="@+id/additional_quarters_text"
        android:layout_width="349dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginRight="27dp"
        android:layout_marginBottom="390dp" />

</RelativeLayout>