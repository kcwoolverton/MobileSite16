<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CellBody">

    <RadioGroup
        android:id="@+id/intro_cell_body_option_group"
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginBottom="99dp">

        <RadioButton
            android:id="@+id/examine_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dead body head description" />

        <RadioButton
            android:id="@+id/examine_torso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dead body torso description" />

        <RadioButton
            android:id="@+id/examine_legs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dead body legs description" />

        <RadioButton
            android:id="@+id/return_to_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_to_cell" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="344dp"
        android:layout_height="288dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        android:layout_marginBottom="414dp"
        android:text="@string/cell_body_description"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="32dp" />

    <Button
        android:id="@+id/intro_cell_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="158dp"
        android:layout_marginRight="158dp"
        android:layout_marginBottom="28dp"
        android:onClick="onNextCellButtonClick"
        android:text="Next" />

    <TextView
        android:id="@+id/additional_cell_body_text"
        android:layout_width="349dp"
        android:layout_height="124dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="258dp" />

</RelativeLayout>